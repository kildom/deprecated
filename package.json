{
  "name": "spidermonkey-wasm",
  "version": "1.0.0",
  "description": "Run JavaScript in an isolated sandbox using Spidermonkey engine compiled to WebAssembly.",
  "main": "index.js",
  "scripts": {
    "moz-download": "scripts/npm-run/moz-download.sh",
    "moz-bootstrap": "scripts/npm-run/moz-bootstrap.sh",
    "moz-build": "scripts/npm-run/moz-build.sh",
    "wasm-build": "scripts/npm-run/wasm-build.sh",
    "wasm-download": "scripts/npm-run/wasm-download.sh",
    "wasm-api": "npx tsx scripts/npm-run/wasm-api.ts",
    "guest-build": "npx tsx scripts/npm-run/guest-build.ts",
    "host-build": "npx tsx scripts/npm-run/host-build.ts",
    "perf": "npx tsx tools/gen-perf.ts && npx esbuild --target=firefox125 --platform=node --bundle --outfile=perf/src/run.js perf/src/run.ts && npx tsx perf/src/compile-bundle.ts && node perf/src/run.js",
    "tools-build-postprocess-wasm": "npx esbuild --sourcemap=inline --platform=node --bundle --outfile=tmp/postprocess-wasm.js tools/postprocess-wasm/main.ts",
    "compile-web-test": "npx esbuild --sourcemap=inline --target=firefox125 --bundle --outfile=tools/testpage/main.js tools/testpage/main.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "con-reg-exp": "^0.2.4",
    "tsx": "^4.11.2",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "esbuild": "^0.21.5"
  }
}
